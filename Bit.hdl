/**
 * 1-bit register.
 * If load[t]=1 then out[t+1] = x[t]
 *              else out does not change (out[t+1]=out[t])
 */

CHIP Bit {
    IN x, load;
    OUT out;

    PARTS:
    Mux(x=a, y=x, sel=load, out=b);
    DFF(x=b, out=a, out=out);
}
