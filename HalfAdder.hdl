/**
 * Computes the sum of two bits.
 */

CHIP HalfAdder {
    IN x, y;    // 1-bit inputs
    OUT sum,    // Right bit of x + y
        carry;  // Left bit of x + y

    PARTS:
    Xor(x=x, y=y, out=sum);
    And(x=x, y=y, out=carry);
}
